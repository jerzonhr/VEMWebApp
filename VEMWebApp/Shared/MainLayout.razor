@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="column-layout master-view-container">
    <div class="row-layout group">
        <div @onclick="@(e => _navDrawer!.ToggleAsync())" class="row-layout group_1">
            <span class="material-icons icon">
                menu
            </span>
        </div>
        <IgbNavbar class="navbar" master_view-scope>
            <div class="row-layout group_2">
                <h6 class="h6">
                    VEM Web App
                </h6>
            </div>
        </IgbNavbar>
    </div>
    <div class="row-layout group_3">
        <IgbNavDrawer Open="true" Position="NavDrawerPosition.Relative" @ref="_navDrawer" class="nav-drawer" master_view-scope>
            <IgbList class="list" master_view-scope>
                <IgbListHeader>Genset</IgbListHeader>
                <IgbListItem @onclick="@(() => NavigationManager.NavigateTo("/genset"))">
                    <IgbAvatar Shape="AvatarShape.Rounded" slot="start" class="avatar" master_view-scope>
                        <span class="material-icons">
                            person
                        </span>
                    </IgbAvatar>
                    <div slot="title">Fueling</div>
                </IgbListItem>
                <IgbListHeader>Work Orders</IgbListHeader>
                <IgbListItem @onclick="@(() => NavigationManager.NavigateTo("/work_orders"))">
                    <IgbAvatar Shape="AvatarShape.Rounded" slot="start" class="avatar" master_view-scope>
                        <span class="material-icons">
                            list
                        </span>
                    </IgbAvatar>
                    <div slot="title">Item Template</div>
                </IgbListItem>
            </IgbList>
        </IgbNavDrawer>
        <div class="view-container">
            @Body
        </div>
    </div>
</div>

@code {
    private IgbNavDrawer _navDrawer;
}
